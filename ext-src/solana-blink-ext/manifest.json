{
    "manifest_version": 3,
    "name": "PredictX â€” Monad Prediction Markets",
    "description": "Trade prediction markets on Monad Testnet directly from Twitter/X posts via Blinks. Uses Privy embedded wallet for seamless signing.",
    "version": "1.0.1",
    "action": {
        "default_popup": "src/popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://x.com/*",
        "http://localhost:3000/*",
        "http://localhost:3001/*",
        "https://predictx.vercel.app/*",
        "https://*.predictx.vercel.app/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ],
            "js": [
                "src/content/content.tsx"
            ],
            "css": [
                "src/content/content.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/content/injected.js"
            ],
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*"
            ]
        }
    ]
}